@model Pontual.DTO.Post.PostRegistroPontoDTO
@{
    ViewData["Title"] = "Registrar Ponto";
}

<style>
    .registro-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        background-color: rgba(0, 0, 0, 0.65);
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

        .registro-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #ffc0ff;
        }

        .registro-container input, .registro-container select {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border-radius: 25px;
            border: 1px solid #9c27b0;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 1rem;
        }

        .registro-container button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 25px;
            background-color: #ab47bc;
            color: white;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .registro-container button:hover {
                background-color: #9c27b0;
            }
</style>

<div class="registro-container">
    <h2>Registrar Ponto</h2>

    <form asp-controller="RegistroPonto" asp-action="Registrar" method="post">
        <input asp-for="IdUsuario" type="number" placeholder="ID do Usuário" />

        <input asp-for="DataRegistro" type="datetime-local" />

        <select asp-for="TipoRegistroPonto">
            <option value="">Selecione o tipo de registro</option>
            <option value="0">Entrada</option>
            <option value="1">Saída</option>
            <option value="2">Intervalo</option>
        </select>

        <button type="submit" formaction="/Home">Registrar</button>
    </form>
</div>